pipeline {
  agent {
    kubernetes {
      label 'workshop-cleanup'
      defaultContainer 'jnlp'
      yaml """
apiVersion: v1
kind: Pod
metadata:
labels:
  component: ci
spec:
  # Use service account that can deploy to all namespaces
  serviceAccountName: cjoc
  containers:
  - name: kubectl
    image: gcr.io/cloud-builders/kubectl
    command:
    - cat
    tty: true
  securityContext:
   runAsUser: 1000
"""
}
  }
  stages {
    stage('Clean') {
      steps {
        container('kubectl') {
          sh('kubectl -n core-workshop delete deployment,pod,pvc,ingress,service -l net.beedemo.deploy.type=workshop')
          sh('kubectl -n core-workshop delete statefulset,pod,pvc,ingress,service -l type=master,tenant!=managed-masters-ops')
          sh('kubectl -n core-workshop exec cjoc-0 -c jenkins -- bash -c "rm -rf /var/jenkins_home/jobs/Teams/jobs/* && mv /var/jenkins_home/users/admin* . && mv /var/jenkins_home/users/beedemoops* . && rm -rf /var/jenkins_home/users/* && mv admin* /var/jenkins_home/users/ && mv beedemoops* /var/jenkins_home/users/ && cp /var/jenkins_home/users.xml /var/jenkins_home/users/ && rm /var/jenkins_home/run-time-state.mv.db"')
          sh('kubectl -n core-workshop exec cjoc-0 -c jenkins reboot')
        } 
      }
    }
  }
}
